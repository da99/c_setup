#!/usr/bin/env bash
#
#
THE_ARGS="$@"
THIS_DIR="$(bash_setup dirname_of_bin "$0")"

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail

if [[ "$action" == tmp/* ]]; then
  rm -f $action
  cd tmp
  NAME=$(basename $action)

  bash_setup BOLD "{{==========================}}"
  make $NAME $@
  # ls "$(dirname $action)"
  ../progs/bin/valgrind --track-origins=yes ${NAME}
  bash_setup GREEN "{{==========================}}"
  echo ""
  exit 0
fi

case $action in
  help|--help)
    mksh_setup print-help $0
    ;;

  *)
    mksh_setup name-to-func "$0" "$action"  "$@"
    ;;
esac
