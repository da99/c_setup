#!/usr/bin/env bash
#
#
THE_ARGS="$@"
THIS_DIR="$(mksh_setup dirname_of_bin "$0")"

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail

if [[ "$action" == tmp/* ]]; then
  rm -f $action
  cd tmp
  NAME=$(basename $action)

  sh_color BOLD "{{==========================}}"
  make $NAME $@
  # ls "$(dirname $action)"
  ../progs/bin/valgrind --track-origins=yes ${NAME}
  sh_color GREEN "{{==========================}}"
  echo ""
  exit 0
fi

case $action in
  help|--help)
    mksh_setup print-help $0
    ;;

  *)
    source "$THIS_DIR/../mksh_setup/bin/source/name-to-func/_.sh"
    name-to-func "$action"  "$@"
    ;;
esac
